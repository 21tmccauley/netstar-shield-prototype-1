{
  "manifest_version": 3,
  "name": "NetSTAR - Your Friendly Security Guide",
  "version": "1.0.0",
  "description": "A friendly browser extension that helps you stay safe online by checking website security",
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/index.html",
    "default_icon": {
      "16": "src/icons/icon-safe-16.png",
      "48": "src/icons/icon-safe-48.png",
      "128": "src/icons/icon-safe-128.png"
    }
  },
  "icons": {
    "16": "src/icons/icon-safe-16.png",
    "48": "src/icons/icon-safe-48.png",
    "128": "src/icons/icon-safe-128.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "src/icons/icon-safe-16.png",
        "src/icons/icon-safe-48.png",
        "src/icons/icon-safe-128.png",
        "src/icons/icon-warning-16.png",
        "src/icons/icon-warning-48.png",
        "src/icons/icon-warning-128.png",
        "src/icons/icon-danger-16.png",
        "src/icons/icon-danger-48.png",
        "src/icons/icon-danger-128.png"
      ],
      "use_dynamic_url": false
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  }
}
